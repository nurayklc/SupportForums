@model ProfileViewModel

<div class="container">
    <h6>User Profile</h6>
    <div class="row">
        <div class="col-md-4">
            <div style="background-image:url(@Model.ProfileImageUrl); background-repeat:no-repeat; background-size:100%; width:200px; height:200px;"></div>
            @if(User.Identity.Name == Model.UserName)
            {
                <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="UploadProfileImage">
                    <div>
                        <label class="btn btn-light">
                            Browse <input type="file" name="file" style="display:none;"/>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            }
        </div>
        <div class="col-md-8">
            <span>@Model.UserName</span>
            @if (Model.IsAdmin)
            {
                <span>Admin</span>
            }
            <span>Current Rating: @Model.UserRating</span><br />
            <span>Email: @Model.Email</span><br />
            <span>Member Since: @Model.MemberSince</span><br />
        </div>
    </div>
</div>