@model NewPostViewModel

<h1>New Post | @Model.ForumName</h1>

    <form asp-action="AddPost" asp-controller="Post" method="post" id="addPostForm">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input type="text" name="Title" asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea type="text" name="Content" asp-for="Content" class="form-control"> </textarea>
        </div>
        <button type="submit" id="submitPostBtn" class="btn btn-submitPost"> Submit Post</button>
        <input type="hidden" asp-for="ForumId" />
    </form>